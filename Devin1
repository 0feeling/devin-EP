<body>
    <h2>Jeu du Devin</h2>
    <p>Est-ce votre nombre ?</p>
    <p id="guess"></p>
    <p id="emoji"></p>
    <button onclick="checkGuess('low')">Trop bas</button>
    <button onclick="checkGuess('correct')">Correct</button>
    <button onclick="checkGuess('high')">Trop haut</button>

    <script>
        let min = 0;
        let max = 999;
        let guess;
        let previousGuess;

        function startGame() {
            alert("Bienvenue au jeu du devin !\n\nJe vais deviner un nombre entre 0 et 999. Vous devez m'aider en me disant si ma supposition est trop basse, correcte ou trop haute. Cliquez sur les boutons appropriÃ©s pour me guider. Essayons de trouver votre nombre avec le moins d'essais possible !");
            guess = Math.floor((min + max) / 2);
            document.getElementById('guess').textContent = guess;
            document.getElementById('emoji').textContent = "ðŸ”";
        }

        function checkGuess(result) {
            previousGuess = guess;
            
            if (result === 'low' && guess >= min + 1 && guess <= max) {
                min = guess + 1; // Ajuster a la borne infÃ©rieure
            } else if (result === 'high' && guess >= min && guess <= max - 1) {
                max = guess - 1; // Ajuster a la borne supÃ©rieure
            } else if (result === 'correct' && guess >= min && guess <= max) {
                document.getElementById('guess').textContent = `Vous avez gagnÃ© ! J'ai devinÃ© votre nombre ${guess} ! ðŸŽ‰`;
                document.getElementById('guess').style.color = 'green'; // Changer la couleur pour indiquer le succÃ¨s
                document.getElementById('emoji').textContent = "ðŸ¥³";
                disableButtons(); // DÃ©sactiver les boutons aprÃ¨s la victoire
                return; // Terminer le jeu
            } else {
                alert("Houla !! Ne triche pas !! SÃ©lectionne la bonne option!");
                return;
            }

            // Faire la prochaine supposition
            guess = Math.floor((min + max) / 2);
            document.getElementById('guess').textContent = guess;

            // Mise Ã  jour des emojis en fonction de la proximitÃ© de la nouvelle supposition
            if (Math.abs(guess - previousGuess) > 50) {
                document.getElementById('emoji').textContent = "ðŸ˜…";
            } else if (Math.abs(guess - previousGuess) > 20) {
                document.getElementById('emoji').textContent = "ðŸ™‚";
            } else {
                document.getElementById('emoji').textContent = "ðŸ˜ƒ";
            }
        }

        function disableButtons() {
            // DÃ©sactiver tous les boutons aprÃ¨s la victoire
            let buttons = document.getElementsByTagName('button');
            for (let i = 0; i < buttons.length; i++) {
                buttons[i].disabled = true;
            }
        }

        // DÃ©marrer le jeu lorsque la page est chargÃ©e
        window.onload = startGame;
    </script>
